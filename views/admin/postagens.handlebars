<h2>Adicionar nova Postagem</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Cadastrar Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Titulo: {{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>{{data}}</small><br>
            <small>{{categoria.nome}}</small>
        </div>
    </div>
{{else}}
    <p>Nenhuma potagem registrada!</p>
{{/each}}