<h2>Adicionar nova categoria</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Cadastrar categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{data}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4">Editar</button></a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-4" >Deletar categoria</button>
            </form>
        </div>
    </div>

{{else}}

{{/each}}